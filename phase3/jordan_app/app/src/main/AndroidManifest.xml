<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jmori156.finalfinalfinal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".PasswordActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".UpdateProfile" />
        <activity android:name=".UpdatePassword"/>

        <!-- LOCATIONS LISTING SCREEN -->
        <activity android:name=".LocationsListingActivity">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <!-- EVENTS LISTING SCREEN -->
        <activity android:name=".EventsListingActivity"
            android:parentActivityName=".LocationsListingActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationsListingActivity"/>
        </activity>


        <!-- EVENT EDIT SCREEN -->
        <activity
            android:name=".EventEditActivity"
            android:parentActivityName=".EventsListingActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EventsListingActivity"/>
        </activity>

        <!-- PER-EVENT COMMENTS LISTING SCREEN -->
        <activity
            android:name=".CommentsListingActivity"
            android:parentActivityName=".EventsListingActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EventsListingActivity"/>
        </activity>
    </application>

</manifest>